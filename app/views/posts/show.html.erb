<div id="title">
  <div>

    <h1>
      <%= @post.title %>
    </h1>
    <p>
      <br/>
      <%= "Date: #{@post.created_at.to_s[0, 10]}" %>
    </p>
    <p>
      writed by <%= @post.author %>
    </p>
  </div>
</div>

<div id="article_wrap">
  <div id="content">
    <p>
      <%= simple_format @post.body %>
    </p>
  </div>

  <div id="sidebar">

    <h2>★PV数ランキング</h2>
    <ul>
      <% Post.most_popular.each do |post| %>
        <li>
          <%= link_to "#{post.title}", post_path(post.id) %>
          <span>
            <%= " (#{post.redis_page_view}PV) " %>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</div>