<div id="main">
  <%= link_to image_tag('main-img.jpg', class: 'main-img'), root_path %>
</div>


<div id="article_wrap">

  <div id="article_list">

    <% @posts.each do |post| %>
      <div>
        <h2>
          <%= link_to post.title, post_path(post.id) %>
        </h2>
        <p>
          <%= post.created_at.to_s[0, 10] %>
        </p>
        <% if user_signed_in? %>
          <p>
            <%= link_to '編集', edit_post_path(post), class: 'command' %>
            <%= link_to '削除',
                        post_path(post),
                        method: :delete,
                        class: 'command' %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="sidebar">

    <h2>★PV数ランキング</h2>
    <ul>
      <% Post.most_popular.each do |post| %>
        <li>
          <%= link_to "#{post.title}", post_path(post.id) %>
          <span>
            <%= " (#{post.redis_page_view}PV) " %>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</div>
